<settings-container>
  <increment-setting text="Default Accuracy" value="defaultAcc" hover-hint="The default accuracy to use when there is no average acc or song-specific value" min="0" max="100" increment="0.1"></increment-setting>
  <increment-setting text="Accuracy Increment Value" value="accIncrement" hover-hint="How much to increase/decrease the accuracy by when incrementing the accuracy on the song view" min="0.05" max="10" increment="0.05"></increment-setting>
  <increment-setting text="Star Acc. Range" value="starRange" hover-hint="How wide the star range should be when calculating your accuracy" min="0.1" max="2" increment="0.05"></increment-setting>
  <dropdown-list-setting text="Star Acc. Calculation Method" value="starAccChoice" choices="starAccOptions"></dropdown-list-setting>
  <increment-setting text="# of Top Scores to use" hover-hint="How many scores to use if using the 'Top N Scores' calculation option" value="numberOfScores" min="1" max="25" increment="1" integer-only="true" ></increment-setting>
</settings-container>